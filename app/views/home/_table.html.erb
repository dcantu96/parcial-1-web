      <th scope="col">Precio</th>
      <th scope="col">Nombre</th>     
    </tr>
  </thead>
  <tbody>
    <% @sorted_products.each_with_index do |product,index| %>
        <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= image_tag product[:image], class: "img-responsive" %></td>
